{
  "compilerOptions": {
    "types": [
      "vitest/globals"
    ],
    "target": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": false,
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
  "rules": {
  }
}
